<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Alus.Views.UserDetailView"
    Title="{Binding UserName}">
    <ContentPage.Content>
        <Grid>
            <Label Text="User id:" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
            <Label Text="{Binding UserId}" Grid.Row="0" Grid.Column="1" />
            
            <Label Text="Username:" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" />
            <Label Text="{Binding UserName}" Grid.Row="1" Grid.Column="1" />
            
            <Label Text="User e-mail:" FontAttributes="Bold" Grid.Row="2" Grid.Column="0" />
            <Label Text="{Binding UserEmail}" Grid.Row="2" Grid.Column="1" />
            
            <Label Text="User phone:" FontAttributes="Bold" Grid.Row="3" Grid.Column="0" />
            <Label Text="{Binding UserPhone}" Grid.Row="3" Grid.Column="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
